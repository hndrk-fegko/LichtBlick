# LichtBlick - Environment Variables

# Server Configuration
PORT=3000
NODE_ENV=development

# MySQL/MariaDB Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_NAME=lichtblick

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=../logs

# Security
ADMIN_PIN=1234

# File Upload
UPLOAD_DIR=../data/uploads
MAX_FILE_SIZE=10485760

# CORS (optional)
CORS_ORIGIN=*
